{
  "name": "derby-score-board",
  "version": "1.0.0",
  "description": "A score board for an arduino based pinewood derby timer",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "install": "electron-rebuild",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "com.benjaminjanderson.app",
    "win": {
      "target": "NSIS",
      "icon": "assets/favicon.ico"
    }
  },
  "repository": "https://github.com/benjanderson/derby-score-board",
  "keywords": [
    "pine",
    "wood",
    "derby",
    "score",
    "board",
    "timer",
    "arduino",
    "electron",
    "serial",
    "port"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "~1.7.8",
    "electron-builder": "^19.54.0",
    "electron-rebuild": "^1.7.3"
  },
  "dependencies": {
    "serialport": "^6.0.4",
    "timespan": "^2.3.0"
  }
}
